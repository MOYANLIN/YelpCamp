<% include ../partials/header %>


<div class="container">
<header class="jumbotron">
<div>
    <h1>Welcome to YelpCamp</h1>
    <p>View our campgrounds from all over the world!</p>
    <p>
    <a  calss="btn btn-dark btn-lg active" href="/campgrounds/new" role="button">Add new campgrounds </a>
    </p>
</div>
</header>

<div class="row" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campgrounds){ %>
    <div class="col-md-3 col-sm-6">
            <img src="<%= campgrounds.image %>" class="img-thumbnail">
            <div class="caption">
            <h4><%= campgrounds.name %></h4>
            </div>
            <p><a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More Info</a></p>
    </div>
     <% }) %>
</div>




</div>


<% include ../partials/footer %>